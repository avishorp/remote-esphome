    "version": "0.2.0",
    "configurations": [
        {
            "name": "Acceptor",
            "type": "debugpy",
            "request": "launch",
            "module": "esphome_tunnel",
            "args": ["acceptor"]
        },
        {
            "name": "Initiator",
            "type": "debugpy",
            "request": "launch",
            "module": "remote_esphome",
            "args": ["initiator"],
            "cwd": "${workspaceFolder}/remote-esphome"
        },
        {
            "name": "Manual Test",
            "type": "debugpy",
            "request": "launch",
            "program": "test/manual.py",
            "args": ["both"],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }

    ]
}